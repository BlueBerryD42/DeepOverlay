{
  "manifest_version": 3,
  "name": "DeepOverlay",
  "version": "1.0",
  "description": "A lightweight web overlay for annotating and translating content.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_title": "DeepOverlay",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "commands": {
    "toggle-overlay": {
      "suggested_key": {
        "default": "Alt+Shift+O"
      },
      "description": "Toggle Overlay"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}